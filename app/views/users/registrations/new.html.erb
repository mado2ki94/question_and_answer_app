<div class="users-signup">
  <h2><%= t('.sign_up') %></h2>
  <div class="users-signup-content">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="field">
        <%= f.label :name, "名前" %><br />
        <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "users-signup-form" %>
      </div>

      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "users-signup-form" %>
      </div>

      <div class="field">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em><%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %></em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "off", class: "users-signup-form" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "users-signup-form" %>
      </div>

      <div class="actions">
        <%= f.submit t('.sign_up'), class: "users-signup-btn" %>
      </div>
    <% end %>

    <%= render "users/shared/links" %>
  </div>
</div>
