<% provide :title, "アカウントの凍結解除方法を再送する" %>
<div class="users-unlock">
  <h2><%= t('.resend_unlock_instructions') %></h2>
  <div class="users-unlock-content">
    <%= form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post }) do |f| %>
      <%= devise_error_messages! %>

      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "users-unlock-form" %>
      </div>

      <div class="actions">
        <%= f.submit t('.resend_unlock_instructions'), class: "users-unlock-btn" %>
      </div>
    <% end %>

    <%= render "users/shared/links" %>
  </div>
</div>
