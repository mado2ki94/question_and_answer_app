<div class="main">
  <div class="row">
    <div class="col-md-8">
      <div class="question-info">
        <h1><%= @user.name %> <%= @question.created_at %></h1>
        <h1><%= @question.title %></h1>
        <h1><%= @question.tag %></h1>
        <h1><%= @question.content %></h1>
        <h1><%= link_to "削除", question_path, method: :delete, data: { confirm: "削除しますか？" } %></h1>
        <% if @question.user_id == @user.id %>
        <h1><%= link_to "編集", edit_question_path(@question) %></h1>
        <% end %>

          <%= @question.answers.each do |answer| %>
            <h2><%= answer.content %></h2>
            <h3><%= answer.user_id %></h3>
            <h3><%= answer.created_at %></h3>
            <% if user_signed_in? && answer.user_id == current_user.id %>
              <%= link_to "回答を削除する", answer_path(answer), method: :delete, data: { confirm: "削除しますか？" } %>
            <% end %>

            <%= answer.responses.each do |response| %>
              <h3><%= response.user_id %></h3>
              <h3><%= response.content %></h3>
              <% if user_signed_in? && response.user_id == current_user.id %>
                <%= link_to "返信を削除する", response_path(response), method: :delete, data: { confirm: "削除しますか？" } %>
              <% end %>
            <% end %>

            <% if user_signed_in? %>
              <%= form_for @response do |f| %>
                <%= f.hidden_field :answer_id, :value => answer.id %>

                <%= f.label :content, "返信" %>
                <%= f.text_area :content, class: "response-form", autocomplete: "off", placeholder: "返信" %>

                <%= f.submit "返信する", class: "response-submit-btn" %>
              <% end %>
            <% end %>
          <% end %>

        <% if user_signed_in? %>

          <%= form_for @answer do |f| %>

            <%= f.label :content, "回答" %>
            <%= f.text_area :content, class: "answer-form", autocomplete: "off", placeholder: "回答" %>

            <%= f.submit "回答する", class: "answer-submit-btn" %>

          <% end %>
        <% end %>
      </div>
    </div>
    <div class="col-md-4">
      右
    </div>
  </div>
</div>
